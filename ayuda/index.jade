block Content

	//- /*===================================================================*\
		    * @Título *
		\*===================================================================*/

	.page-title
		h1  Ayuda
			span Totalplay

		h2 Tenemos diversas vías para proporcionarte ayuda, elige la de tu preferencia


	section.ayuda

		aside.ayuda__division.ayuda__division--1

			.ayuda__item
				h4 Vía Chat
				.ayuda__item--chat
					p Atención a clientes:
					a(href="") ¡Click Aquí!
				.ayuda__item--chat
					p Soporte Técnico
					a(href="") ¡Click Aquí!

			.ayuda__item
				h4 Vía Telefonica
				.ayuda__item--telefono
					a(href="") D.F. y Área Metropolitana 
						span 1579 8000
				.ayuda__item--telefono
					a(href="") Interior de la República 
						span 01 800 510 0510
			.ayuda__item
				h4 Vía Electrónica
				.ayuda__item--electronica
					p Completa un formulario electrónico para dar seguimiento a tu solicitud
					a(href="") ¡Click Aquí!

			.ayuda__item
				h4 Redes Sociales
				.ayuda__item--sociales
					p Estamos para ayudarte en cualquier problema con nuestro servicio
				.ayuda__item--sociales
					a(href="") Twitter
				.ayuda__item--sociales
					a(href="") Facebook

		aside.ayuda__division.ayuda__division--2

			.ayuda__item
				.ayuda__item--preguntas
					img(src="images/marzo-15/preguntas-frecuentes.jpg", alt="Preguntas frecuentes")
